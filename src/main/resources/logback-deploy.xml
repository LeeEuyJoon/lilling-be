<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 텍스트 콘솔 출력 (Docker stdout으로 전송) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 읽기 쉬운 포맷: 타임스탬프 [레벨] [스레드] 로거명 - 메시지 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 운영에서는 INFO 이상만 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- luti.server 패키지는 INFO -->
    <logger name="luti.server" level="INFO"/>

    <!-- noisy 패키지 줄이기 -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>

</configuration>
