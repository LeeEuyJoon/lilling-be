<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- JSON 콘솔 출력 (Docker stdout으로 전송) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- JSON 포맷 인코더 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- 타임스탬프 KST 포맷 (Asia/Seoul) -->
            <timeZone>Asia/Seoul</timeZone>
            <!-- 추가 필드 (선택) -->
            <customFields>{"app":"lilling-be"}</customFields>
        </encoder>
    </appender>

    <!-- 운영에서는 INFO 이상만 -->
    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE"/>
    </root>

    <!-- luti.server 패키지는 INFO -->
    <logger name="luti.server" level="INFO"/>

    <!-- noisy 패키지 줄이기 -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>

</configuration>
